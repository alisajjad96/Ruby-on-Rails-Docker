<%= form_with model: @product, local: true do |form| %>
  <% if @product && @product.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h6>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this product from being saved:
      </h6>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "Product Name" %><br>
    <%= form.text_field :name, :class => 'form-control', placeholder: "Product Name", required: "true" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description" %><br>
    <%= form.text_area :description, :class => 'form-control', :rows => 3, required: "true" %>
  </div>

  <% if @product && @product.id.present? %>
    <%= form.submit "Update" %>
  <% else %>
    <%= form.submit "Submit" %>
  <% end %>

<% end %>