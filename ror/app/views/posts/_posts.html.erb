<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Slug</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.user.display_name %></td>
      <td><%= post.slug %></td>
      <td><%= post.body %></td>
      <td><%= link_to 'Show', post %></td>
      <% if post.user.id == current_user.id %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Remove', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% else %>
        <td>Edit</td>
        <td>Destroy</td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
